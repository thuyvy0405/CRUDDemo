@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Xóa";
}

<div>
    <h4 class="text-danger">Bạn có muốn xóa tài khoản này không ?</h4>
    <dl>
        <dt>Email</dt>
        <dd>@Model.Email</dd>
        <dt>Username</dt>
        <dd>@Model.UserName</dd>
        <!-- Add other user properties you want to display -->
    </dl>
    <form asp-action="DeleteConfirm" method="post">
        <input type="hidden" asp-for="Email" />
        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-primary">Quay lại danh sách</a>
    </form>
</div>
