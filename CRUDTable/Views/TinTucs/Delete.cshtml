@model DataAccessLayer.Entities.TinTuc

@{
    ViewData["Title"] = "Xóa";
}

<div>
    <h3 class="text-danger">Bạn có muốn xóa tin tức này không ?</h3>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TieuDe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TieuDe)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TomTat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TomTat)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NoiDung)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.NoiDung)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HinhAnh)
        </dt>
        <dd class = "col-sm-10">
            @if(Model.HinhAnh != null)
            {
                <img src="~/images/tintuc/@Model.HinhAnh" style="height:300px; width:300px;" />
            }
            else
            {
                <p>Chưa có ảnh</p>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NgayTao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayTao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NgayUpdate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayUpdate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LuotXem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LuotXem)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TrangThai)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrangThai)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdtinTuc" />
        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-primary">Quay lại danh sách</a>
    </form>
</div>
